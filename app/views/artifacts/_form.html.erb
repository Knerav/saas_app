<%= form_with(model: artifact, local: true) do |form| %>
  <% if artifact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

      <ul>
      <% artifact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :upload, value: 'File to upload' %>
    <%= form.file_field :upload %>
  </div>

  <%= form.hidden_field :project_id %>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= link_to 'Back', tenant_project_path(tenant_id: Tenant.current_tenant_id, id: @artifact.project_id), class: "btn", id: "button-format_grey" %>
<% end %>
