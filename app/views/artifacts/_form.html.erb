<%= form_with(model: artifact, class: "form", local: true) do |form| %>
  <% if artifact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

      <ul>
      <% artifact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control mt-1" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :upload, value: 'File to upload' %>
    <%= form.file_field :upload, class: "form-control mt-1" %>
  </div>

  <%= form.hidden_field :project_id %>

  <div class="form-group">
    <%= form.submit 'Create', class: "btn mt-1", id: "button-format-orange" %>
  </div>

  <%= link_to 'Back', tenant_project_path(tenant_id: Tenant.current_tenant_id, id: @artifact.project_id), class: "btn mt-3", id: "button-format-grey" %>
<% end %>
