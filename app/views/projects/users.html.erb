<div class="container mt-5">
  
  <div class="row">
    <div class="col">

      <p class="lead">Users for project <%= @project.name %></p>

    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
    
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col"><%= t'.actions', :default => t('helpers.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% @project_users.each do |project_user| %>
            <tr>
              <td><%= project_user.email %></td>
              <td>
                <% if !project_user.is_admin? %>
                  <%= link_to "Remove", user_project_path(project_user.user_projects.find_by(project_id: @project.id), tenant_id: @project.tenant_id), method: :delete, data: { confirm: t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?'))}, class: "btn btn-danger btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>
  </div>

  <div class="row">
    <div class="col">

      <p class="lead">Users for project <%= @project.name %></p>

    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
    
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col"><%= t'.actions', :default => t('helpers.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% @other_users.each do |other_user| %>
            <tr>
              <td><%= other_user.email %></td>
              <td>              
                <%= link_to "Add", add_user_tenant_project_path(id: @project.id, tenant_id: @project.tenant_id, user_id: other_user.id), method: :put, class: "btn btn-success btn-sm" %>           
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to 'Back', tenant_project_path(id: @project.id, tenant_id: @project.tenant_id), class: "btn mt-4", id: "button-format-grey" %>
    
    </div>
  </div>

</div>