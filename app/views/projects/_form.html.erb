<%= form_for [@tenant, @project], :html => { :class => "form" } do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control mt-1" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :details %>
    <%= form.text_field :details, class: "form-control mt-1" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :expected_completion_date %>
    <%= form.date_select :expected_completion_date, class: "form-control mt-1" %>
  </div>

  <%= form.hidden_field :tenant_id, value: params[:tenant_id] %>

  <div class="form-group">
    <%= form.submit 'Create', class: "btn mt-4", id: "button-format-orange" %>
  </div>
<% end %>
